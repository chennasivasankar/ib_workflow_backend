{
  "swagger": "2.0",
  "host": "127.0.0.1:8000",
  "basePath": "/authentication/",
  "info": {
    "version": "1.0.0",
    "title": "Authentication",
    "description": "Authentication provided for Login"
  },
  "schemes": [
    "https",
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "oauth": {
      "tokenUrl": "http://auth.ibtspl.com/oauth2/",
      "flow": "password",
      "scopes": {
        "read": "read users",
        "write": "create users",
        "update": "update users",
        "delete": "delete users"
      },
      "type": "oauth2"
    }
  },
  "definitions": {
  },
  "parameters": {
    "LoginParameter": {
      "name": "login",
      "description": "email and password to login in database",
      "in": "body",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      }
    }
  },
  "responses": {
    "LoginInResponse": {
      "description": "Success Response",
      "schema": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          },
          "refresh_token": {
            "type": "string"
          },
          "expires_in_seconds": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "access_token",
          "refresh_token",
          "expires_in_seconds"
        ]
      }
    },
    "LoginInBadRequestResponse": {
      "description": "Log in Bad Request Response",
      "schema": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string"
          },
          "http_status_code": {
            "type": "integer",
            "format": "int64"
          },
          "res_status": {
            "type": "string",
            "enum": [
              "INVALID_PASSWORD"
            ]
          }
        },
        "required": [
          "response",
          "http_status_code",
          "res_status"
        ]
      }
    },
    "LoginInNotFoundResponse": {
      "description": "Login In Not Found response",
      "schema": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string"
          },
          "http_status_code": {
            "type": "integer",
            "format": "int64"
          },
          "res_status": {
            "type": "string",
            "enum": [
              "INVALID_EMAIL"
            ]
          }
        },
        "required": [
          "response",
          "http_status_code",
          "res_status"
        ]
      }
    }
  },
  "paths": {
    "/login/v1/": {
      "post": {
        "operationId": "user_login",
        "summary": "login",
        "description": "if user is exists return the access_token and is_admin",
        "security": [
          {
            "oauth": [
              "read"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/LoginParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/LoginInResponse"
          },
          "404": {
            "$ref": "#/responses/LoginInNotFoundResponse"
          },
          "400": {
            "$ref": "#/responses/LoginInBadRequestResponse"
          }
        }
      }
    }
  }
}