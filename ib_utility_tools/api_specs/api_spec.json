{
  "swagger": "2.0",
  "host": "127.0.0.1:8000",
  "basePath": "/api/ib_utility_tools/",
  "info": {
    "version": "1.0.0",
    "title": "IB Utility Tools",
    "description": "IB Utility Tools"
  },
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "oauth": {
      "tokenUrl": "http://auth.ibtspl.com/oauth2/",
      "flow": "password",
      "scopes": {
        "read": "read users",
        "write": "create users",
        "update": "update users",
        "delete": "delete users"
      },
      "type": "oauth2"
    }
  },
  "security": [],
  "definitions": {
    "CommonHttpExceptionFields": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string"
        },
        "http_status_code": {
          "type": "integer"
        }
      },
      "required": [
        "response",
        "http_status_code"
      ]
    },
    "EntityDetails": {
      "type": "object",
      "properties": {
        "entity_id": {
          "type": "string"
        },
        "entity_type": {
          "type": "string",
          "enum": [
            "TASK",
            "COLUMN",
            "BOARD"
          ]
        }
      },
      "required": [
        "entity_id",
        "entity_type"
      ]
    },
    "ChecklistItemDetails": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "is_checked": {
          "type": "boolean"
        }
      },
      "required": [
        "text",
        "is_checked"
      ]
    },
    "ChecklistItemWithIdAndDetails": {
      "allOf": [
        {
          "$ref": "#/definitions/ChecklistItemDetails"
        },
        {
          "type": "object",
          "properties": {
            "checklist_item_id": {
              "type": "integer"
            }
          },
          "required": [
            "checklist_item_id"
          ]
        }
      ]
    },
    "ChecklistItemWithEntityDetails": {
      "allOf": [
        {
          "$ref": "#/definitions/EntityDetails"
        },
        {
          "$ref": "#/definitions/ChecklistItemDetails"
        }
      ]
    },
    "EmptyChecklistItemTextException": {
      "allOf": [
        {
          "$ref": "#/definitions/CommonHttpExceptionFields"
        },
        {
          "type": "object",
          "properties": {
            "res_status": {
              "type": "string",
              "enum": [
                "EMPTY_CHECKLIST_ITEM_TEXT"
              ]
            }
          },
          "required": [
            "res_status"
          ]
        }
      ]
    }
  },
  "parameters": {
    "CreateChecklistItemParameter": {
      "name": "CreateChecklistItemParameter",
      "description": "Create checklist item",
      "in": "body",
      "required": true,
      "schema": {
        "$ref": "#/definitions/ChecklistItemWithEntityDetails"
      }
    },
    "UpdateChecklistItemParameter": {
      "name": "UpdateChecklistItemParameter",
      "description": "update checklist item",
      "in": "body",
      "required": true,
      "schema": {
        "$ref": "#/definitions/ChecklistItemDetails"
      }
    },
    "ChecklistItemIdPathParameter": {
      "name": "checklist_item_id",
      "in": "path",
      "required": true,
      "type": "string",
      "format": "uuid"
    },
    "GetChecklistParameter": {
      "name": "GetChecklistParameter",
      "description": "get checklist",
      "in": "body",
      "required": true,
      "schema": {
        "$ref": "#/definitions/EntityDetails"
      }
    }
  },
  "responses": {
    "SuccessForCreateChecklistItemResponse": {
      "description": "create checklist item success response",
      "schema": {
        "type": "object",
        "properties": {
          "checklist_item_id": {
            "type": "string"
          }
        },
        "required": [
          "checklist_item_id"
        ]
      }
    },
    "CreateChecklistItemBadRequestResponse": {
      "description": "create checklist item bad request response",
      "schema": {
        "$ref": "#/definitions/EmptyChecklistItemTextException"
      }
    },
    "UpdateChecklistItemBadRequestResponse": {
      "description": "create checklist item bad request response",
      "schema": {
        "$ref": "#/definitions/EmptyChecklistItemTextException"
      }
    },
    "UpdateChecklistItemNotFoundResponse": {
      "description": "create checklist item not found response",
      "schema": {
        "allOf": [
          {
            "$ref": "#/definitions/CommonHttpExceptionFields"
          },
          {
            "type": "object",
            "properties": {
              "res_status": {
                "type": "string",
                "enum": [
                  "CHECKLIST_ITEM_ID_NOT_FOUND"
                ]
              }
            },
            "required": [
              "res_status"
            ]
          }
        ]
      }
    },
    "GetChecklistResponse": {
      "description": "get checklist response",
      "schema": {
        "allOf": [
          {
            "$ref": "#/definitions/EntityDetails"
          },
          {
            "type": "object",
            "properties": {
              "checklist": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/ChecklistItemWithIdAndDetails"
                }
              }
            }
          }
        ]
      }
    }
  },
  "paths": {
    "/checklist/item/create/v1/": {
      "post": {
        "operationId": "create_checklist_item",
        "summary": "create checklist item ",
        "description": "create the checklist item with given description",
        "security": [
          {
            "oauth": [
              "write"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/CreateChecklistItemParameter"
          }
        ],
        "responses": {
          "201": {
            "$ref": "#/responses/SuccessForCreateChecklistItemResponse"
          },
          "400": {
            "$ref": "#/responses/CreateChecklistItemBadRequestResponse"
          }
        }
      }
    },
    "/checklist/item/{checklist_item_id}/v1/": {
      "put": {
        "operationId": "update_checklist_item",
        "summary": "update checklist item ",
        "description": "update the checklist item with given details",
        "security": [
          {
            "oauth": [
              "write"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/UpdateChecklistItemParameter"
          },
          {
            "$ref": "#/parameters/ChecklistItemIdPathParameter"
          }
        ],
        "responses": {
          "200": {
            "description": "Success response for update checklist item"
          },
          "400": {
            "$ref": "#/responses/UpdateChecklistItemBadRequestResponse"
          },
          "404": {
            "$ref": "#/responses/UpdateChecklistItemNotFoundResponse"
          }
        }
      }
    },
    "/checklist/v1/": {
      "post": {
        "operationId": "get_checklist",
        "summary": "get checklist",
        "description": "get checklist for given entity details",
        "security": [
          {
            "oauth": [
              "write"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/GetChecklistParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/GetChecklistResponse"
          }
        }
      }
    }
  }
}
