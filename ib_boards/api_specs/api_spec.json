      "required": [
        "response",
        "http_status_code",
        "res_status"
      ]
    },
    "AccessUnauthorized": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string"
        },
        "http_status_code": {
          "type": "integer"
        },
        "res_status": {
          "type": "string",
          "enum": [
            "USER_DONOT_HAVE_ACCESS"
          ]
        }
      },
      "required": [
        "response",
        "http_status_code",
        "res_status"
      ]
    },
    "InvalidColumnDetails": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string"
        },
        "http_status_code": {
          "type": "integer"
        },
        "res_status": {
          "type": "string",
          "enum": [
            "INVALID_BOARD_ID"
          ]
        }
      },
      "required": [
        "response",
        "http_status_code",
        "res_status"
      ]
    },
    "InvalidPaginationDetails": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string"
        },
        "http_status_code": {
          "type": "integer"
        },
        "res_status": {
          "type": "string",
          "enum": [
            "INVALID_OFFSET_VALUE",
            "INVALID_LIMIT_VALUE"
          ]
        }
      },
      "required": [
        "response",
        "http_status_code",
        "res_status"
      ]
    },
    "FieldTypeEnum": {
      "type": "object",
      "properties": {
        "field_type": {
          "type": "string",
          "enum": [
            "PLAIN_TEXT",
            "PHONE_NUMBER",
            "EMAIL",
            "URL",
            "PASSWORD",
            "NUMBER",
            "FLOAT",
            "LONG_TEXT",
            "GOF_SELECTOR",
            "RADIO_GROUP",
            "CHECKBOX_GROUP",
            "DROPDOWN",
            "IMAGE_UPLOADER",
            "FILE_UPLOADER",
            "SEARCHABLE",
            "DATE",
            "MULTI_SELECT_FIELD"
          ]
        }
      },
      "required": [
        "field_type"
      ]
    },
    "StagesWithActions": {
      "type": "object",
      "properties": {
        "stage_id": {
          "type": "integer"
        },
        "stage_display_name": {
          "type": "string"
        },
        "stage_color": {
          "type": "string"
        },
        "assignee": {
          "$ref": "#/definitions/Assignee"
        },
        "actions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Action"
          }
        }
      },
      "required": [
        "stage_id",
        "stage_display_name",
        "stage_color",
        "actions"
      ]
    },
    "Action": {
      "type": "object",
      "properties": {
        "action_id": {
          "type": "integer",
          "format": "int64"
        },
        "action_type": {
          "type": "string",
          "enum": [
            "NO_VALIDATIONS"
          ]
        },
        "transition_template_id": {
          "type": "string"
        },
        "button_text": {
          "type": "string"
        },
        "button_color": {
          "type": "string"
        }
      },
      "required": [
        "action_id",
        "button_text",
        "button_color"
      ]
    },
    "TaskOverviewWithStageAndActions": {
      "type": "object",
      "properties": {
        "task_id": {
          "type": "string"
        },
        "task_overview_fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TaskOverviewFields"
          }
        },
        "stage_with_actions": {
          "$ref": "#/definitions/StagesWithActions"
        }
      },
      "required": [
        "task_id",
        "task_overview_fields",
        "stage_with_actions"
      ]
    },
    "TaskOverviewFields": {
      "allOf": [
        {
          "$ref": "#/definitions/FieldTypeEnum"
        },
        {
          "type": "object",
          "properties": {
            "field_display_name": {
              "type": "string"
            },
            "field_response": {
              "type": "string"
            }
          },
          "required": [
            "field_display_name"
          ]
        }
      ]
    },
    "Assignee": {
      "type": "object",
      "properties": {
        "assignee_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "profile_pic_url": {
          "type": "string"
        }
      },
      "required": [
        "assignee_id",
        "name"
      ]
    },
    "TaskDetails": {
      "type": "object",
      "properties": {
        "task_id": {
          "type": "string"
        },
        "stage_color": {
          "type": "string"
        },
        "stage_id": {
          "type": "integer",
          "format": "int64"
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "field_type": {
                "type": "string"
              },
              "key": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": [
              "field_type",
              "key",
              "value"
            ]
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "action_id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "button_text": {
                "type": "string"
              },
              "button_color": {
                "type": "string"
              },
              "transition_template_id": {
                "type": "string"
              }
            },
            "required": [
              "action_id",
              "name",
              "button_text"
            ]
          }
        }
      },
      "required": [
        "task_id",
        "fields",
        "actions",
        "stage_color",
        "stage_id"
      ]
    },
    "ColumnDetails": {
      "type": "object",
      "properties": {
        "column_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "total_tasks": {
          "type": "integer",
          "format": "int64"
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TaskOverviewWithStageAndActions"
          }
        }
      },
      "required": [
        "column_id",
        "name",
        "total_tasks",
        "tasks"
      ]
    },
    "InvalidStarBoardDetails": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string"
        },
        "http_status_code": {
          "type": "integer"
        },
        "res_status": {
          "type": "string",
          "enum": [
            "INVALID_BOARD_ID"
          ]
        }
      },
      "required": [
        "response",
        "http_status_code",
        "res_status"
      ]
    },
    "BoardDetails": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "board_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "board_id",
          "name"
        ]
      }
    },
    "TaskCompleteDetails": {
      "type": "object",
      "properties": {
        "total_tasks": {
          "type": "integer",
          "format": "int64"
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TaskOverviewWithStageAndActions"
          }
        }
      },
      "required": [
        "total_tasks",
        "tasks"
      ]
    }
  },
  "parameters": {
    "OffsetParameter": {
      "name": "offset",
      "in": "query",
      "description": "offset value",
      "type": "integer",
      "format": "int64",
      "required": true
    },
    "LimitParameter": {
      "name": "limit",
      "in": "query",
      "description": "limit value",
      "type": "integer",
      "format": "int64",
      "required": true
    },
    "SearchQueryParameter": {
      "name": "search_query",
      "in": "query",
      "description": "Search Query value",
      "type": "string",
      "required": false
    },
    "BoardIdParameter": {
      "name": "board_id",
      "in": "path",
      "description": "board id value",
      "type": "string",
      "required": true
    },
    "ColumnIdParameter": {
      "name": "column_id",
      "in": "path",
      "description": "column id value",
      "type": "string",
      "required": true
    },
    "ActionParameter": {
      "name": "action",
      "in": "body",
      "description": "is starred value",
      "schema": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "STAR",
              "UNSTAR"
            ]
          }
        },
        "required": [
          "action"
        ]
      }
    },
    "ViewTypeParameter": {
      "name": "view_type",
      "in": "body",
      "required": true,
      "description": "view type",
      "schema": {
        "type": "object",
        "properties": {
          "view_type": {
            "type": "string",
            "enum": [
              "LIST",
              "KANBAN"
            ]
          }
        },
        "required": [
          "view_type"
        ]
      }
    }
  },
  "responses": {
    "InvalidAccessResponse": {
      "description": "unauthorized access",
      "schema": {
        "$ref": "#/definitions/AccessUnauthorized"
      }
    },
    "InvalidColumnsResponse": {
      "description": "invalid board id",
      "schema": {
        "$ref": "#/definitions/InvalidColumnDetails"
      }
    },
    "InvalidTasksResponse": {
      "description": "invalid column id",
      "schema": {
        "$ref": "#/definitions/InvalidTaskDetails"
      }
    },
    "InvalidPaginationResponse": {
      "description": "invalid offset or invalid limit",
      "schema": {
        "$ref": "#/definitions/InvalidPaginationDetails"
      }
    },
    "InvalidStarResponse": {
      "description": "invalid starred board response",
      "schema": {
        "$ref": "#/definitions/InvalidStarBoardDetails"
      }
    },
    "GetBoardsResponse": {
      "description": "get boards response",
      "schema": {
        "type": "object",
        "properties": {
          "total_boards_count": {
            "type": "integer",
            "format": "int64"
          },
          "starred_boards": {
            "$ref": "#/definitions/BoardDetails"
          },
          "all_boards": {
            "$ref": "#/definitions/BoardDetails"
          }
        },
        "required": [
          "total_boards_count",
          "starred_boards",
          "all_boards"
        ]
      }
    },
    "ColumnsDetailsResponse": {
      "description": "columns details",
      "schema": {
        "type": "object",
        "properties": {
          "total_columns_count": {
            "type": "integer",
            "format": "int64"
          },
          "columns": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/ColumnDetails"
            }
          }
        }
      }
    },
    "TaskDetailsResponse": {
      "description": "tasks details",
      "schema": {
        "$ref": "#/definitions/TaskCompleteDetails"
      }
    }
  },
  "paths": {
    "/boards/v1/": {
      "get": {
        "operationId": "get_boards_details",
        "summary": "Get Boards Details ",
        "description": "get boards details based on user roles",
        "security": [
          {
            "oauth": [
              "read",
              "write"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/OffsetParameter"
          },
          {
            "$ref": "#/parameters/LimitParameter"
          }
        ],
        "responses": {
          "403": {
            "$ref": "#/responses/InvalidAccessResponse"
          },
          "400": {
            "$ref": "#/responses/InvalidPaginationResponse"
          },
          "200": {
            "$ref": "#/responses/GetBoardsResponse"
          }
        }
      }
    },
    "/boards/{board_id}/star/v1/": {
      "post": {
        "operationId": "add_or_remove_given_board_id_from_starred_boards",
        "summary": "Add Or Remove Given BoardId From Starred Boards",
        "description": "add or remove given board id from starred boards",
        "security": [
          {
            "oauth": [
              "read",
              "write"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/BoardIdParameter"
          },
          {
            "$ref": "#/parameters/ActionParameter"
          }
        ],
        "responses": {
          "403": {
            "$ref": "#/responses/InvalidAccessResponse"
          },
          "404": {
            "$ref": "#/responses/InvalidStarResponse"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/boards/{board_id}/columns/v1/": {
      "post": {
        "operationId": "get_columns_details",
        "summary": "Get Column Details",
        "description": "get columns details of the given board id",
        "security": [
          {
            "oauth": [
              "read",
              "write"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/BoardIdParameter"
          },
          {
            "$ref": "#/parameters/OffsetParameter"
          },
          {
            "$ref": "#/parameters/LimitParameter"
          },
          {
            "$ref": "#/parameters/ViewTypeParameter"
          },
          {
            "$ref": "#/parameters/SearchQueryParameter"
          }
        ],
        "responses": {
          "403": {
            "$ref": "#/responses/InvalidAccessResponse"
          },
          "404": {
            "$ref": "#/responses/InvalidColumnsResponse"
          },
          "400": {
            "$ref": "#/responses/InvalidPaginationResponse"
          },
          "200": {
            "$ref": "#/responses/ColumnsDetailsResponse"
          }
        }
      }
    },
    "/columns/{column_id}/tasks/v1/": {
      "post": {
        "operationId": "get_column_tasks",
        "summary": "Get Column Tasks",
        "description": "get column tasks details",
        "security": [
          {
            "oauth": [
              "read",
              "write"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/LimitParameter"
          },
          {
            "$ref": "#/parameters/OffsetParameter"
          },
          {
            "$ref": "#/parameters/ColumnIdParameter"
          },
          {
            "$ref": "#/parameters/ViewTypeParameter"
          },
          {
            "$ref": "#/parameters/SearchQueryParameter"
          }
        ],
        "responses": {
          "403": {
            "$ref": "#/responses/InvalidAccessResponse"
          },
          "400": {
            "$ref": "#/responses/InvalidPaginationResponse"
          },
          "404": {
            "$ref": "#/responses/InvalidTasksResponse"
          },
          "200": {
            "$ref": "#/responses/TaskDetailsResponse"
          }
        }
      }
    }
  }
